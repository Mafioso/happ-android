<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.happ">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label= "@string/app_name"
        android:supportsRtl="true"
        android:name=".App"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controllers.FeedActivity">
        </activity>
        <activity
            android:name=".controllers.EventActivity"
            android:label="Event Activity"
            />

        <activity
            android:name=".controllers.EditActivity"
            android:label="Edit Activity"
            />
        <activity
            android:name=".controllers.EventCreateActivity"
            android:label="Create Event"
            android:windowSoftInputMode="adjustResize|stateHidden">

        </activity>

        <activity
            android:name=".controllers.SelectInterestsActivity"
            android:label="Select Interests">
        </activity>

        <activity
            android:name=".controllers.SplashScreen">

        </activity>
        <activity android:name=".fragments.SelectCityFragment">

        </activity>
        <activity
            android:name=".controllers.RegistrationActivity"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity
            android:name=".controllers.LoginActivity"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>


        <service
            android:name=".retrofit.APIService"
            android:exported="false" >
        </service>
    </application>

</manifest>