    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/happ_icon_main"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
