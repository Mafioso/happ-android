<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="TransparentActionBar" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/TransparentBackground</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:textColorPrimary">@color/colorAccentDark</item>
        <item name="android:statusBarColor">@color/colorAccentDark</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/TransparentBackground</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimaryDark">@color/colorAccentDark</item>
    </style>

</resources>
