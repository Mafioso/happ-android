<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EventToolbar" parent="ThemeOverlay.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="LightAppBar" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TransparentActionBar" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/TransparentBackground</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/TransparentBackground</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:textColorPrimary">@color/dark38</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="TransparentBackground"
        parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@null</item>
        <!-- Support library compatibility -->
        <item name="background">@null</item>
    </style>

    <style name="TextAppearance.ExpandedTitle"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/bg_light</item>
        <item name="android:shadowColor">@color/dark28</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">16</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/bg_light</item>
    </style>

    <style name="CollapsedAppBar2" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/dark38</item>
    </style>

    <style name="Theme.Splash" parent="android:Theme">
        <item name="android:windowBackground">@drawable/ic_menu</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="LoginScreenEditText" parent="TextAppearance.AppCompat">
        <!-- Hint action_navigation_item_text_color and label action_navigation_item_text_color in FALSE state -->
        <item name="android:textColor">@color/bg_light</item>
        <item name="android:textColorHint">@color/white57</item>
        <item name="android:textSize">16sp</item>
        <!-- Label action_navigation_item_text_color in TRUE state and bar action_navigation_item_text_color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white24</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="StyleForEditText" parent="TextAppearance.AppCompat">
        <!-- Hint action_navigation_item_text_color and label action_navigation_item_text_color in FALSE state -->
        <item name="android:textColor">@color/bg_light</item>
        <item name="android:textColorHint">@color/white57</item>
        <item name="android:textSize">18dp</item>
        <!-- Label action_navigation_item_text_color in TRUE state and bar action_navigation_item_text_color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white24</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="DarkStyleEditText" parent="TextAppearance.AppCompat">
        <!-- Hint action_navigation_item_text_color and label action_navigation_item_text_color in FALSE state -->
        <item name="android:textColor">@color/dark57</item>
        <item name="android:textColorHint">@color/dark38</item>
        <item name="android:textSize">16sp</item>
        <!-- Label action_navigation_item_text_color in TRUE state and bar action_navigation_item_text_color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/dark38</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="DarkStyleEditText2" parent="TextAppearance.AppCompat">
        <!-- Hint action_navigation_item_text_color and label action_navigation_item_text_color in FALSE state -->
        <item name="android:textColor">@color/dark57</item>
        <item name="android:textColorHint">@color/dark38</item>
        <item name="android:textSize">16sp</item>
        <!-- Label action_navigation_item_text_color in TRUE state and bar action_navigation_item_text_color FALSE and TRUE State -->
        <item name="colorAccent">@color/dark57</item>
        <item name="colorControlNormal">@color/dark57</item>
        <item name="colorControlActivated">@color/dark57</item>
    </style>

    <style name="SettingsTypeText">
        <item name="android:fontFamily">roboto-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/dark57</item>
    </style>

    <style name="NavDrawerTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/action_navigation_item_text_color</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:paddingTop">2dp</item>
        <item name="android:listPreferredItemHeightSmall">32dp</item><!-- menu item height-->
        <item name="listPreferredItemHeightSmall">32dp</item><!-- menu item height-->
        <item name="android:listPreferredItemPaddingLeft">16dp</item>
        <item name="listPreferredItemPaddingLeft">16dp</item>
    </style>

    <style name="EventActivityText" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/background_title_event</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="textColorAlertDialogListItem">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowBackground">@drawable/background_dialog</item>
    </style>

</resources>
