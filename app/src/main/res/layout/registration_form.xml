<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_registration_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark80"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/form_layout"
        android:layout_centerVertical="true"
        android:layout_above="@+id/rl_footer"
        android:layout_below="@+id/ll_toolbar"
        android:paddingBottom="48dp"
        android:paddingTop="48dp"
        android:paddingLeft="42dp"
        android:paddingRight="42dp">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/happ_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="32dp"/>

        <RelativeLayout
            android:id="@+id/rl_username_form"
            android:layout_below="@+id/img_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_light_top"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <EditText
                android:id="@+id/input_signup_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="textNoSuggestions"
                android:fontFamily="Roboto"
                android:background="#00000000"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:hint="@string/username"
                android:theme="@style/DarkStyleEditText2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_password_form"
            android:layout_below="@+id/rl_username_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_light_center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <EditText
                android:id="@+id/input_signup_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="@string/password"
                android:fontFamily="Roboto"
                android:background="#00000000"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:inputType="textPassword"
                android:theme="@style/DarkStyleEditText2"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_repeat_password_form"
            android:layout_below="@+id/rl_password_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_light_bottom"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginBottom="16dp">
            <EditText
                android:id="@+id/input_signup_repeat_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="@string/repeat_password"
                android:fontFamily="Roboto"
                android:background="#00000000"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:inputType="textPassword"
                android:theme="@style/DarkStyleEditText2"/>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_create_account"
            android:layout_below="@+id/rl_repeat_password_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/borderlessButtonStyle"
            android:textColor="@color/white70"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:paddingRight="32dp"
            android:paddingLeft="32dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_orange_event"
            android:text="@string/create_account" />

            <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                android:id="@+id/circular_progress_signup"
                android:layout_below="@+id/rl_repeat_password_form"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:layout_marginTop="8dp"
                android:indeterminate="true"
                style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
                android:visibility="invisible"
                android:layout_centerHorizontal="true"/>

    </RelativeLayout>


    <include layout="@layout/toolbar"/>

    <include layout="@layout/copyright" />

</RelativeLayout>