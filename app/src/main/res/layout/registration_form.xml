<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_registration_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark80"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/form_layout"
        android:layout_centerVertical="true"
        android:paddingLeft="42dp"
        android:paddingRight="42dp">

            <ImageView
                android:id="@+id/img_login_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/happ_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="32dp"/>

            <Button
                android:id="@+id/button_fb_login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/img_login_logo"
                style="?attr/borderlessButtonStyle"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="@color/mdtp_white"
                android:text="@string/login_facebook"
                android:drawableLeft="@drawable/com_facebook_button_icon_blue"
                android:background="@color/fb_bg"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:visibility="gone"
                />

        <RelativeLayout
            android:id="@+id/rl_form_registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_fb_login"
            android:background="@drawable/circle_light"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_signup_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/DarkStyleEditText2">

                <EditText
                    android:paddingBottom="16dp"
                    android:id="@+id/input_signup_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:fontFamily="Roboto"
                    android:textColor="@android:color/white"
                    android:inputType="textNoSuggestions"
                    android:hint="@string/username" />

            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_signup_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_layout_signup_username"
                android:theme="@style/DarkStyleEditText2">
                <EditText
                    android:paddingBottom="16dp"
                    android:id="@+id/input_signup_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:hint="@string/password"
                    android:fontFamily="Roboto"
                    android:textColor="@android:color/white"
                    android:inputType="textPassword"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_signup_repeat_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_layout_signup_password"
                android:theme="@style/DarkStyleEditText2">
                <EditText
                    android:paddingBottom="16dp"
                    android:id="@+id/input_signup_repeat_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:hint="@string/repeat_password"
                    android:fontFamily="Roboto"
                    android:textColor="@android:color/white"
                    android:inputType="textPassword"/>

            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_user_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/borderlessButtonStyle"
            android:textColor="@color/white70"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:paddingRight="32dp"
            android:paddingLeft="32dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_orange_event"
            android:text="@string/create_account"
            android:layout_below="@+id/rl_form_registration"
            />

            <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                android:layout_marginTop="16dp"
                android:id="@+id/circular_progress_signup"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:indeterminate="true"
                style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
                android:layout_below="@+id/rl_form_registration"
                android:visibility="invisible"
                android:layout_centerHorizontal="true"/>

    </RelativeLayout>


    <include layout="@layout/toolbar"/>

</RelativeLayout>