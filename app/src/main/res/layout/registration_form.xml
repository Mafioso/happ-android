<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:paddingTop="80dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_signup_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/input_signup_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="@string/username" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_signup_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/input_layout_signup_username">
        <EditText
            android:id="@+id/input_signup_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="@string/email" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_signup_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/input_layout_signup_email">
        <EditText
            android:id="@+id/input_signup_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="@string/password"
            android:password="true"/>

    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_signup_pw_visibility"
        android:background="@drawable/ic_visibility_compat"
        android:layout_below="@id/input_layout_signup_email"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:onClick="btn_click_signup_pw_visibility"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_signup_pw_visibility_off"
        android:background="@drawable/ic_visibility_off_compat"
        android:layout_below="@id/input_layout_signup_email"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:onClick="btn_click_signup_pw_visibility_off"/>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_signup_repeat_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/input_layout_signup_password">
        <EditText
            android:id="@+id/input_signup_repeat_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="@string/repeat_password"
            android:password="true"/>

    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_signup_pwr_visibility"
        android:background="@drawable/ic_visibility_compat"
        android:layout_below="@id/input_layout_signup_password"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:onClick="btn_click_signup_pwr_visibility"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_signup_pwr_visibility_off"
        android:background="@drawable/ic_visibility_off_compat"
        android:layout_below="@id/input_layout_signup_password"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:onClick="btn_click_signup_pwr_visibility_off"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/signup_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_done_compat"
        app:fabSize="normal"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/input_layout_signup_repeat_password"/>

</RelativeLayout>