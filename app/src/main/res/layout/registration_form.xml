            <android.support.design.widget.FloatingActionButton
                android:id="@+id/signup_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/ic_done_compat"
                app:fabSize="normal"
                android:visibility="visible"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/input_layout_signup_repeat_password"/>

            <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                android:layout_marginTop="16dp"
                android:id="@+id/circular_progress_signup"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:indeterminate="true"
                style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
                android:layout_below="@+id/input_layout_signup_repeat_password"
                android:visibility="invisible"
                android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/button_fb_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/signup_fab"
            style="?attr/borderlessButtonStyle"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="@color/mdtp_white"
            android:text="@string/login_facebook"
            android:drawableLeft="@drawable/com_facebook_button_icon"
            android:background="@drawable/com_facebook_button_background"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
