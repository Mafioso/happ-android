<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cardview_light_background">


    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_event_black_24dp"
                    android:alpha="0.57"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/filter_input_layout_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="32dp"
                    android:theme="@style/CreateScreenEditText">

                    <EditText
                        android:id="@+id/filter_input_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="56dp"
                        android:singleLine="true"
                        android:enabled="false"
                        android:textColor="@android:color/primary_text_light_nodisable"
                        android:hint="@string/start_date"
                        android:inputType="textNoSuggestions"/>

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/filter_btn_start_date"
                    android:drawableTop="@drawable/ic_edit_compat"
                    android:layout_alignParentRight="true"
                    android:paddingTop="12dp"
                    style="?attr/borderlessButtonStyle">
                </Button>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_event_black_24dp"
                    android:alpha="0.57"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/filter_input_layout_end_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="32dp"
                    android:theme="@style/CreateScreenEditText">

                    <EditText
                        android:id="@+id/filter_input_end_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="56dp"
                        android:singleLine="true"
                        android:textColor="@android:color/primary_text_light_nodisable"
                        android:enabled="false"
                        android:hint="@string/end_date"
                        android:inputType="textNoSuggestions"/>

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/filter_btn_end_date"
                    android:drawableTop="@drawable/ic_edit_compat"
                    android:layout_alignParentRight="true"
                    android:paddingTop="12dp"
                    style="?attr/borderlessButtonStyle">

                </Button>
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="По цене"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/filter_free"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="56dp" />

        </LinearLayout>
</RelativeLayout>