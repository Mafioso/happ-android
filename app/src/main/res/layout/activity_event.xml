<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".controllers_drawer.EventActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppBar">

            <net.opacapp.multilinecollapsingtoolbar.CollapsingToolbarLayout
                android:id="@+id/event_collapsing_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentScrim="@color/dark38"
                app:maxLines="3">

                <android.support.v4.view.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:id="@+id/slider_viewpager"
                    android:transitionName="event_image"
                    android:scaleY="2"
                    android:scaleX="2"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax"
                    android:visibility="gone"/>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="pin" />

            </net.opacapp.multilinecollapsingtoolbar.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>


            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="120dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background_title_event"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="42dp"
                        android:paddingRight="42dp">

                        <TextView
                            android:id="@+id/event_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Event Long Long Long Title"
                            android:textAllCaps="true"
                            android:textSize="32sp"
                            android:textColor="@android:color/white"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="24dp"
                        android:paddingBottom="16dp"
                        android:paddingRight="24dp"
                        android:paddingLeft="24dp">

                        <LinearLayout
                            android:layout_weight="1"
                            android:id="@+id/ll_calendar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp">

                                <LinearLayout
                                    android:id="@+id/ll_calendar_image"
                                    android:layout_gravity="center"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerHorizontal="true"
                                    android:background="@drawable/circle_event">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        app:srcCompat="@drawable/i_calendar_white"/>

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/event_start_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:text="OCT1" />
                                <LinearLayout
                                    android:id="@+id/ll_calendar_time"
                                    android:layout_below="@+id/ll_calendar_start_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_centerHorizontal="true">

                                    <TextView
                                        android:id="@+id/event_start_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="10:00" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" — " />

                                    <TextView
                                        android:id="@+id/event_end_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="23:00" />

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/ll_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <LinearLayout
                                android:id="@+id/ll_buy_image"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/circle_event"
                                android:gravity="center"
                                android:layout_gravity="center">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_money"/>

                            </LinearLayout>

                            <TextView
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/event_price"
                                android:text="Free — $100"/>

                            <TextView
                                android:textColor="@color/dark38"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/event_currency"
                                android:text="USD"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_alignParentRight="true"
                            android:id="@+id/ll_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <LinearLayout
                                android:id="@+id/ll_place_image"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/circle_event"
                                android:layout_gravity="center"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_place_white"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="8dp"
                                android:layout_gravity="center">

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/event_place"
                                    android:maxLines="2"
                                    android:gravity="center"
                                    android:text="Central city. Long Logn Logn Text. "
                                    android:lineSpacingMultiplier="1.2"
                                    />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/ll_upvote_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/circle_event"
                            android:paddingLeft="24dp"
                            android:paddingRight="24dp"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:gravity="left">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_like_white"/>

                            <TextView
                                android:id="@+id/event_votes_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:text="1"
                                android:paddingLeft="8dp"
                                android:layout_gravity="center_vertical"
                                android:textColor="@android:color/white"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@drawable/circle_orange_event"
                            android:paddingLeft="24dp"
                            android:paddingRight="24dp"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:layout_marginLeft="24dp">

                            <ImageView
                                android:id="@+id/event_iv_favorites"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_not_in_favorites_white"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:text="@string/want_to_go"
                                android:paddingLeft="8dp"
                                android:layout_gravity="center_vertical"
                                android:textColor="@android:color/white"/>

                        </LinearLayout>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/event_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam gravida venenatis accumsan. In mi massa, tempus"
                        android:textSize="18sp"
                        android:textColor="@color/dark80"
                        android:lineSpacingMultiplier="1.2"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingRight="24dp"
                        android:paddingLeft="24dp"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="32dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="8dp"
                        android:id="@+id/event_author_form">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/event_author_image"
                            app:srcCompat="@drawable/avatar"
                            android:src="@drawable/avatar"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="16dp"/>

                        <TextView
                            android:id="@+id/event_author"
                            android:layout_toRightOf="@id/event_author_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Event Organizer"
                            android:textColor="@color/dark38"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/event_compaty_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Compaty Name"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:layout_toRightOf="@id/event_author_image"
                            android:layout_below="@+id/event_author"
                            android:layout_marginBottom="4dp"/>

                        <ImageView
                            android:id="@+id/event_chat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_event_chat"
                            android:layout_toRightOf="@+id/event_author_image"
                            android:layout_below="@+id/event_compaty_name"
                            android:layout_marginRight="8dp"
                            />

                        <TextView
                            android:id="@+id/event_ask_about"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ask_about_event"
                            android:textSize="16sp"
                            android:textColor="@color/colorAccent"
                            android:layout_toRightOf="@id/event_chat"
                            android:layout_below="@+id/event_compaty_name"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="24dp"
                        android:paddingRight="16dp"
                        android:id="@+id/event_website_form">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_website2"
                            android:paddingLeft="8dp"
                            />


                        <TextView
                            android:layout_marginLeft="32dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/event_website"
                            android:textSize="18sp"
                            android:textColor="@color/colorAccent"
                            android:text="Web Site"
                            android:lineSpacingMultiplier="1.2"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="24dp"
                        android:paddingRight="16dp"
                        android:id="@+id/event_email_form">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_email"
                            android:paddingLeft="8dp" />


                        <TextView
                            android:layout_marginLeft="32dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/event_email"
                            android:layout_gravity="center_vertical"
                            android:textSize="18sp"

                            android:textColor="@color/colorAccent"
                            android:text="Email"
                            android:lineSpacingMultiplier="1.2" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="24dp"
                        android:paddingRight="16dp"
                        android:id="@+id/event_phone_form">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_phone"
                            android:paddingLeft="8dp" />


                        <TextView
                            android:layout_marginLeft="32dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/event_phone"
                            android:layout_gravity="center_vertical"
                            android:textSize="18sp"
                            android:textColor="@color/colorAccent"
                            android:text="+7 (777) 123-45-67"
                            android:lineSpacingMultiplier="1.2" />

                    </LinearLayout>
                </LinearLayout>
                <!--</LinearLayout>-->

            </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:id="@+id/fab"
            app:fabSize="normal"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/ic_edt_white"
            />


    </android.support.design.widget.CoordinatorLayout>
    <include layout="@layout/drawer_layout"/>
</android.support.v4.widget.DrawerLayout>