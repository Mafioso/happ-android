<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_registration_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark80"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.happ.LockableScrollView
        android:id="@+id/fake_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_recove_pw_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/login_bg_4"/>

    </com.happ.LockableScrollView>

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/form_layout"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            android:gravity="center"
            android:layout_above="@+id/rl_footer">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/happ_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"/>

        <TextView
            android:id="@+id/tv_enter_email"
            android:layout_below="@+id/img_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/bg_light"
            android:text="@string/recover_enter_email"
            android:gravity="center"
            />

            <RelativeLayout
                android:id="@+id/rl_recove_form"
                android:layout_below="@+id/tv_enter_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_light"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="16dp">
                <EditText
                    android:id="@+id/input_recove_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:hint="@string/username_or_email"
                    android:fontFamily="Roboto"
                    android:background="#00000000"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:inputType="textNoSuggestions"
                    android:theme="@style/DarkStyleEditText2"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_detailed_instruction"
                android:layout_below="@+id/rl_recove_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detailed_instruction"
                android:textSize="14sp"
                android:textColor="@color/bg_light"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>
            <Button
                android:id="@+id/btn_recover_password"
                android:layout_below="@+id/tv_detailed_instruction"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                style="?attr/borderlessButtonStyle"
                android:textColor="@color/white70"
                android:textSize="16sp"
                android:paddingRight="40dp"
                android:paddingLeft="40dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:alpha="0.8"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_orange_event"
                android:text="@string/recover_password" />

            <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                android:id="@+id/circular_progress_recove_password"
                android:layout_below="@+id/tv_detailed_instruction"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:indeterminate="true"
                style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
                android:visibility="invisible"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"/>

        </RelativeLayout>

        <include layout="@layout/toolbar"/>
        <include layout="@layout/copyright"/>
    </RelativeLayout>

</RelativeLayout>