<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/interest_container"
    android:paddingBottom="1dp"
    android:paddingLeft="0dp">

        <RelativeLayout
            android:id="@+id/interest_image_container"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:background="@color/dark80"
            android:gravity="center">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/dark12"
                android:scaleType="fitXY"
                android:id="@+id/interest_imageview"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/selected_count_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3/4"
                    android:textColor="@color/bg_light"/>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/selected_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_check_all_white"
                    android:layout_marginLeft="4dp"/>

            </LinearLayout>


            <ImageButton
                android:id="@+id/show_children_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_tune_white_24dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/interest_bg"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:background="@color/dark80"
            android:gravity="center"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_below="@+id/interest_image_container">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Animals Animals Animals"
                android:gravity="center"
                android:maxLines="2"
                android:textAllCaps="true"
                android:textColor="@color/bg_light"
                android:textSize="14sp"
                android:id="@+id/interest_title"/>



        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/interest_children_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@color/dark12"
            android:visibility="gone">

        </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/inactive_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white70"
        android:translationZ="10dp">

    </RelativeLayout>

</RelativeLayout>