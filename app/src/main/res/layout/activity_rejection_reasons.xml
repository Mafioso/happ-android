<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/bg_light">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/btn_edit_event"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/dark80"
            android:text="@string/rra_header_text"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/dark87"
            android:text="@string/rra_please_edit_this"
            android:layout_marginBottom="16dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rra_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_edit_event"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        style="?attr/borderlessButtonStyle"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_light"
        android:text="@string/edit_event"
        android:gravity="center"/>


</RelativeLayout>