<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/big_thumb_c78d223aafd30aaaccf254b37ec5228c"
    android:fitsSystemWindows="true">
    <!--android:background="@drawable/login_bg"-->

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/form_layout2"
        android:layout_centerVertical="true"
        android:background="@drawable/circle"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <ImageView
            android:id="@+id/img_login_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/happ_icon"
            android:transitionName="happ_logo"
            android:layout_centerHorizontal="true"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_user_pw_form"
            android:paddingBottom="16dp"
            android:layout_below="@+id/img_login_logo">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:theme="@style/LoginScreenEditText"
                android:layout_below="@id/img_login_logo">
                <EditText
                    android:id="@+id/input_login_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="textNoSuggestions"
                    android:textColor="@android:color/white"
                    android:hint="@string/username" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:theme="@style/LoginScreenEditText"
                android:layout_below="@+id/input_layout_login_email">

                <EditText
                    android:id="@+id/input_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:hint="@string/password"
                    android:fontFamily="Roboto"
                    android:textColor="@android:color/white"
                    android:inputType="textPassword"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/login_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_done_compat"
            app:fabSize="normal"
            android:layout_below="@+id/ll_user_pw_form"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"/>

        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:id="@+id/circular_progress_login"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:indeterminate="true"
            android:layout_below="@+id/ll_user_pw_form"
            style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
            android:visibility="gone"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_footer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dont_account"
            android:textColor="@color/white57"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_registration_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up_now"
            android:gravity="center_vertical"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="true"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:textSize="14dp"
            android:textStyle="normal"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>

</RelativeLayout>