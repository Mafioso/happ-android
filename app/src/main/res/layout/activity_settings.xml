<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".controllers_drawer.SettingsActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/toolbar"/>

            <android.support.v4.widget.NestedScrollView
                android:layout_below="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:theme="@style/SettingsTypeText"
                    android:paddingTop="24dp">

                    <Button
                        android:id="@+id/btn_profile_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/user_settings"
                        style="?attr/borderlessButtonStyle"
                        android:drawableLeft="@drawable/ic_user_57_compat"
                        android:paddingLeft="16dp"
                        android:drawablePadding="24dp"
                        android:gravity="left|center"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:onClick="buttonOnClick"
                        android:layout_marginTop="-8dp"
                        android:layout_marginBottom="-8dp"
                        />

                    <!--<Button-->
                        <!--android:id="@+id/btn_push_notif"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--style="?attr/borderlessButtonStyle"-->
                        <!--android:text="@string/push_notifications"-->
                        <!--android:drawableLeft="@drawable/ic_s_chat_orange_compat"-->
                        <!--android:paddingLeft="16dp"-->
                        <!--android:drawablePadding="24dp"-->
                        <!--android:gravity="left|center"-->
                        <!--android:minHeight="40dp"-->
                        <!--android:paddingTop="0dp"-->
                        <!--android:paddingBottom="0dp"-->
                        <!--android:onClick="buttonOnClick"-->

                        <!--android:enabled="false"-->
                        <!--android:textColor="@color/dark12"-->
                        <!--android:drawableTint="@color/dark12"-->
                        <!--/>-->

                    <Button
                        android:id="@+id/btn_change_currency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="?attr/borderlessButtonStyle"
                        android:text="@string/change_currency"
                        android:drawableLeft="@drawable/ic_currency_compat"
                        android:paddingLeft="16dp"
                        android:drawablePadding="24dp"
                        android:gravity="left|center"
                        android:onClick="buttonOnClick"
                        android:minHeight="40dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:layout_marginBottom="-8dp"
                        />

                    <Button
                        android:id="@+id/btn_contact_happ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="?attr/borderlessButtonStyle"
                        android:text="@string/contact_happ"
                        android:drawableLeft="@drawable/ic_mail_compat"
                        android:paddingLeft="16dp"
                        android:drawablePadding="24dp"
                        android:gravity="left|center"
                        android:minHeight="40dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:onClick="buttonOnClick"
                        android:layout_marginBottom="-8dp" />

                    <Button
                        android:id="@+id/btn_faq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="?attr/borderlessButtonStyle"
                        android:text="@string/faq_help"
                        android:drawableLeft="@drawable/ic_faq_compat"
                        android:paddingLeft="16dp"
                        android:drawablePadding="24dp"
                        android:gravity="left|center"
                        android:minHeight="40dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:onClick="buttonOnClick"
                        android:layout_marginBottom="-8dp"/>

                    <Button
                        android:id="@+id/btn_terms_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="?attr/borderlessButtonStyle"
                        android:text="@string/terms_of_service"
                        android:drawableLeft="@drawable/ic_terms_of_service_compat"
                        android:paddingLeft="16dp"
                        android:drawablePadding="24dp"
                        android:gravity="left|center"
                        android:minHeight="40dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:onClick="buttonOnClick"
                        android:layout_marginBottom="-8dp"
                        />

                    <Button
                        android:id="@+id/btn_privacy_policy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="?attr/borderlessButtonStyle"
                        android:text="@string/privacy_policy"
                        android:paddingLeft="66dp"
                        android:gravity="left|center"
                        android:minHeight="40dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:onClick="buttonOnClick"
                        android:layout_marginBottom="-8dp"
                        />

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>
        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>

    <include layout="@layout/drawer_layout" />

</android.support.v4.widget.DrawerLayout>
