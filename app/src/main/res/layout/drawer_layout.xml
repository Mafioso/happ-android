<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.NavigationView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.NavigationView
            android:id="@+id/navigation_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:paddingBottom="@dimen/design_navigation_separator_vertical_padding"
            app:headerLayout="@layout/drawer_header" />

        <android.support.v4.view.ViewPager
            android:id="@+id/drawer_viewpager"
            android:layout_below="@+id/navigation_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <android.support.design.widget.NavigationView
            android:layout_below="@+id/drawer_viewpager"
            android:layout_above="@+id/ll_drawer_footer"
            android:id="@+id/navigation_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            app:menu="@menu/drawer"
            app:theme="@style/NavigationViewStyle"
            app:itemIconTint="@color/colorAccent"
            app:itemTextAppearance="@style/NavDrawerTextStyle" />

        <LinearLayout
            android:id="@+id/ll_drawer_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_drawer_version_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/dark38"
                android:text="HAPP v1.03"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/dark38"
                android:text="@string/all_rights_reserved"/>

        </LinearLayout>

    </RelativeLayout>


    <ImageView
        android:id="@+id/close_left_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_close_x_white"
        android:paddingLeft="16dp"
        android:paddingTop="@dimen/drawer_top_padding"
        android:layout_marginTop="16dp"/>


</android.support.design.widget.NavigationView>