<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rlView"
    android:layout_margin="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@color/dark38">

        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:scaleType="fitXY"
            android:transitionName="event_image"
            android:id="@+id/org_event_item_imageview"/>


        <RelativeLayout
            android:id="@+id/org_event_item_bg_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark57"
            android:alpha="0.6"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rl_bottom_bar"
            android:layout_toLeftOf="@+id/bg_org_item">

            <ImageView
                android:id="@+id/org_event_item_placeholder"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/image_placeholder"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:alpha="0.3"/>

            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar"
                android:theme="@style/CircularProgress"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/event_item_image_preloader"/>

            <ImageView
                android:id="@+id/org_event_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_done"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/bg_org_item"
            android:layout_toStartOf="@+id/bg_org_item"
            android:background="@color/dark80">

            <LinearLayout
                android:id="@+id/ll_like"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toRightOf="@+id/ll_favorites"
                android:layout_toEndOf="@+id/ll_favorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_did_not_upvote"
                    android:padding="6dp"
                    android:id="@+id/clickimage_like"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="5"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/bg_light"
                    android:id="@+id/org_event_item_votes_count" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_favorites"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    app:srcCompat="@drawable/ic_not_in_favorites"
                    android:id="@+id/clickimage_favorites"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="4"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/bg_light" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bg_org_item"
            android:layout_toRightOf="@+id/org_event_item_imageview"
            android:layout_toEndOf="@+id/org_event_item_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark38">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                android:theme="@style/EventToolbar"
                android:id="@+id/event_toolbar"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:id="@+id/org_event_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:transitionName="event_title"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:lines="1"
                android:singleLine="true"
                android:text="@string/event_title"
                android:textColor="@color/bg_light"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="32dp"/>


            <TextView
                android:id="@+id/org_event_item_interest"
                android:layout_below="@+id/org_event_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white70"
                android:text="@string/event_interest"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="4dp"
                android:transitionName="event_interest_name"
                />


            <TextView
                android:id="@+id/org_event_item_datetime"
                android:layout_above="@+id/org_event_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textAllCaps="true"
                android:textColor="@color/bg_light"
                android:text="@string/event_date"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingBottom="4dp"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="32dp"/>



            <TextView
                android:id="@+id/org_event_item_price"
                android:layout_above="@+id/org_event_item_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white70"
                android:text="@string/price"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="32dp"/>

            <TextView
                android:id="@+id/org_event_item_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@string/event_place"
                android:textColor="@color/white70"
                android:layout_alignParentBottom="true"
                android:paddingBottom="8dp"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="32dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/org_event_item_err_msg"
                android:layout_above="@+id/btn_see_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="@string/denied_err_message"
                android:textColor="@color/white70"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="32dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_see_details"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                style="?attr/borderlessButtonStyle"
                android:textColor="@color/bg_light"
                android:textSize="12sp"
                android:gravity="start"
                android:textAllCaps="true"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="32dp"
                android:layout_alignParentBottom="true"
                android:text="@string/see_details"
                android:visibility="gone"/>


        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>