<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.NavigationView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_view_right"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="@color/bb_darkBackgroundColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/drawer_top_padding"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/customize_feed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="@string/customize_feed"
                android:textColor="@color/white70"/>

            <ImageView
                android:id="@+id/close_right_navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_close_x"/>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/edit_input_layout_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customize_feed"
            android:theme="@style/StyleForEditText"
            android:paddingTop="6dp"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:paddingBottom="6dp">

            <EditText
                android:id="@+id/filter_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search..."
                android:drawableRight="@drawable/ic_search_compat"
                android:layout_marginTop="16dp"
                android:textSize="16sp"/>
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:id="@+id/filter_rl_free"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_input_layout_search"
            android:layout_marginTop="24dp"
            android:paddingLeft="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/only_free"
                android:textSize="18dp"
                android:textColor="@color/white70"
                android:layout_centerVertical="true"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/filter_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


            <TextView
                android:id="@+id/show_only_events"
                android:layout_below="@+id/filter_rl_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_only_events"
                android:layout_marginTop="24dp"
                android:textColor="@color/white70"
                android:textSize="16sp"
                android:paddingLeft="16dp"/>

            <TextView
                android:layout_below="@+id/filter_rl_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/click_to_edit_range"
                android:layout_marginTop="24dp"
                android:textColor="@color/white57"
                android:textSize="16sp"/>



            <LinearLayout
                android:id="@+id/filter_ll_start_date"
                android:layout_below="@+id/show_only_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingLeft="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white70"
                    android:text="@string/from"
                    android:layout_marginRight="16dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:text="@string/today"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/filter_ll_end_date"
                android:layout_below="@+id/filter_ll_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:paddingLeft="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white70"
                    android:text="@string/up_to"
                    android:layout_marginRight="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="OCTOBER 24, 2016"/>
            </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/filter_ll_end_date"
            android:layout_marginTop="24dp"
            android:paddingLeft="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popular_first"
                android:textColor="@color/white70"
                android:textSize="18dp"
                android:layout_centerVertical="true"/>

            <android.support.v7.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.design.widget.NavigationView>