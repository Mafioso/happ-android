<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.NavigationView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:segmentedgroup="http://schemas.android.com/tools"
    android:id="@+id/navigation_view_right"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="@color/bb_darkBackgroundColor">

    <RelativeLayout
        android:id="@+id/ff_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/drawer_top_padding"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/customize_feed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/customize_feed"
                android:textColor="@color/white70"/>

            <ImageView
                android:id="@+id/close_right_navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_close_x"/>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/edit_input_layout_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customize_feed"
            android:theme="@style/StyleForEditText"
            android:paddingTop="6dp"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:paddingBottom="6dp">

            <EditText
                android:id="@+id/filter_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search..."
                android:textColor="@android:color/white"
                android:drawableRight="@drawable/ic_search_compat"
                android:layout_marginTop="16dp"
                android:textSize="16sp"/>
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:id="@+id/filter_rl_free"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_input_layout_search"
            android:layout_marginTop="24dp"
            android:paddingLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/only_free"
                android:textSize="16sp"
                android:textColor="@color/white70"
                android:layout_centerVertical="true"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/filter_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

            <RelativeLayout
                android:id="@+id/filter_rl_start_date"
                android:layout_below="@+id/filter_rl_free"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="48dp"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/ff_top_text_filter_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white70"
                    android:text="@string/date_filter"
                    android:layout_marginRight="16dp"
                    android:textSize="16sp"
                    android:layout_centerVertical="true" />
            
                <EditText
                    android:id="@+id/ff_edittext_filterdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textAllCaps="true"
                    android:textSize="14sp"
                    android:theme="@style/StyleForEditText"
                    android:enabled="false"
                    android:clickable="false"
                    android:layout_toRightOf="@+id/ff_top_text_filter_date"
                    android:layout_toLeftOf="@+id/iv_filter_date_cheron_right"/>
                
                <ImageView
                    android:id="@+id/iv_filter_date_cheron_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_chevron_right"/>


                <View
                    android:id="@+id/view_filter_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ff_top_text_filter_date"/>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/filter_rl_end_date"
                android:layout_below="@+id/filter_rl_start_date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/ff_top_text_filter_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white70"
                    android:text="@string/time_filter"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"/>

                <EditText
                    android:id="@+id/ff_edittext_filtertime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textAllCaps="true"
                    android:textSize="14sp"
                    android:enabled="false"
                    android:clickable="false"
                    android:theme="@style/StyleForEditText"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ff_top_text_filter_time"
                    android:layout_toLeftOf="@+id/iv_filter_time_cheron_right"/>

                <ImageView
                    android:id="@+id/iv_filter_time_cheron_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_chevron_right"/>

                <View
                    android:id="@+id/view_filter_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/ff_top_text_filter_time"/>

            </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ff_bottom_currency"
            android:paddingLeft="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popular_first"
                android:textColor="@color/white70"
                android:textSize="16sp"
                android:layout_centerVertical="true"/>

            <android.support.v7.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ff_bottom_currency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingLeft="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/ff_bottom_currency_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white70"
                android:text="@string/event_currency"
                android:layout_centerVertical="true"/>

            <info.hoang8f.android.segmented.SegmentedGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ff_bottom_currency_text"
                android:layout_marginLeft="24dp"
                android:orientation="horizontal"
                segmentedgroup:sc_border_width="1dp"
                segmentedgroup:sc_corner_radius="10dp"
                app:sc_tint_color="@color/colorAccent">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/user"
                    style="@style/RadioButton" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/event"
                    style="@style/RadioButton" />
            </info.hoang8f.android.segmented.SegmentedGroup>

        </RelativeLayout>

    </RelativeLayout>

</android.support.design.widget.NavigationView>