<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/drawer_top_padding"
        android:background="@color/bg_light">

        <include layout="@layout/toolbar"/>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_light"
            android:layout_below="@+id/ll_toolbar"
            android:layout_above="@+id/btn_editcreate_save">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="0px"
                    android:layout_height="0px"/>

                <RelativeLayout
                    android:id="@+id/container_ec_images"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/dark12"
                    android:visibility="gone">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/ec_image_rv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/tv_images_warning"/>

                    <TextView
                        android:id="@+id/tv_images_warning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="@string/warning_add_image_in_ec"
                        android:gravity="center_horizontal"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/container_ec_images"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_ec_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/input_ec_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:hint="@string/event_title"
                            android:textSize="16sp"
                            android:inputType="textNoSuggestions"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_ec_interest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_toLeftOf="@+id/ibtn_ec_edit_interest"
                        android:layout_toStartOf="@+id/ibtn_ec_edit_interest"
                        android:layout_below="@+id/input_layout_ec_name"
                        android:visibility="visible">

                        <EditText
                            android:id="@+id/input_ec_select_interest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textSize="16sp"
                            android:hint="@string/event_interest"
                            android:inputType="textNoSuggestions"
                            android:enabled="false"/>
                    </android.support.design.widget.TextInputLayout>

                    <ImageButton
                        android:id="@+id/ibtn_ec_edit_interest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/input_layout_ec_name"
                        app:srcCompat="@drawable/ic_edit_compat"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:padding="16dp"
                        android:visibility="visible"
                        android:background="?android:selectableItemBackground" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_ec_description"
                        android:layout_below="@+id/input_layout_ec_interest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/input_ec_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/event_description"
                            android:textSize="16sp"
                            android:inputType="textNoSuggestions"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:textSize="16sp"
                            android:text="@string/tap_here_description"/>
                    </android.support.design.widget.TextInputLayout>



                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_ec_city"
                        android:layout_below="@+id/input_layout_ec_description"
                        android:layout_toLeftOf="@+id/ibtn_ec_edit_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                        <EditText
                            android:id="@+id/input_ec_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textSize="16sp"
                            android:enabled="false"
                            android:hint="@string/city"
                            android:inputType="textNoSuggestions"/>
                    </android.support.design.widget.TextInputLayout>

                    <ImageButton
                        android:id="@+id/ibtn_ec_edit_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/input_layout_ec_description"
                        app:srcCompat="@drawable/ic_edit_compat"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:padding="16dp"
                        android:visibility="visible"
                        android:background="?android:selectableItemBackground" />




                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_ec_place"
                        android:layout_below="@+id/input_layout_ec_city"
                        android:layout_toLeftOf="@+id/ibtn_ec_edit_map"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                        <EditText
                            android:id="@+id/input_ec_place"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textSize="16sp"
                            android:enabled="false"

                            android:hint="@string/event_place"
                            android:inputType="textNoSuggestions"/>
                    </android.support.design.widget.TextInputLayout>


                    <ImageButton
                        android:id="@+id/ibtn_ec_edit_map"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/input_layout_ec_city"
                        app:srcCompat="@drawable/ic_place_orange_compat"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:padding="16dp"
                        android:visibility="visible"
                        android:background="?android:selectableItemBackground" />



                    <RelativeLayout
                        android:id="@+id/rl_price_ec"
                        android:layout_below="@+id/input_layout_ec_place"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:visibility="visible">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_ec_min_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/dash_price"
                            android:layout_toStartOf="@+id/dash_price">

                            <EditText
                                android:id="@+id/input_ec_min_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:textSize="16sp"
                                android:hint="@string/event_min_price"
                                android:inputType="number"
                                android:gravity="center"/>
                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            android:id="@+id/dash_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="—"
                            android:textSize="18sp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"/>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_ec_max_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/dash_price"
                            android:layout_toEndOf="@+id/dash_price">

                            <EditText
                                android:id="@+id/input_ec_max_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:textSize="16sp"
                                android:hint="@string/event_max_price"
                                android:inputType="number"
                                android:gravity="center"/>
                        </android.support.design.widget.TextInputLayout>
                    </RelativeLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_ec_currency"
                        android:layout_below="@+id/rl_price_ec"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:visibility="visible">

                        <EditText
                            android:id="@+id/input_ec_currency"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textSize="16sp"
                            android:hint="@string/event_currency"
                            android:inputType="textNoSuggestions"/>
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_below="@id/input_layout_ec_currency"
                        android:id="@+id/tv_ec_event_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="24dp"
                        android:text="@string/event_date"/>

                    <ImageButton
                        android:id="@+id/ibtn_ec_edit_startdate"
                        android:layout_below="@+id/tv_ec_event_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_edit_compat"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:padding="16dp"
                        android:background="?android:selectableItemBackground" />
                    

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_ec_startdate"
                        android:layout_below="@+id/tv_ec_event_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/ibtn_ec_edit_startdate"
                        android:layout_toStartOf="@+id/ibtn_ec_edit_startdate"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp">

                        <EditText
                            android:id="@+id/input_ec_startdate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:enabled="false"
                            android:hint="@string/start_date"
                            android:textSize="16sp"
                            android:inputType="textNoSuggestions"/>
                    </android.support.design.widget.TextInputLayout>

                    <ImageButton
                        android:id="@+id/ibtn_ec_edit_enddate"
                        android:layout_below="@+id/input_layout_ec_startdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_edit_compat"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:padding="16dp"
                        android:background="?android:selectableItemBackground" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_ec_enddate"
                        android:layout_toLeftOf="@+id/ibtn_ec_edit_enddate"
                        android:layout_toStartOf="@+id/ibtn_ec_edit_enddate"
                        android:layout_below="@+id/input_layout_ec_startdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp">

                        <EditText
                            android:id="@+id/input_ec_enddate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:enabled="false"
                            android:hint="@string/end_date"
                            android:textSize="16sp"
                            android:inputType="textNoSuggestions"/>
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/tv_ec_event_duration"
                        android:layout_below="@id/input_layout_ec_enddate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="24dp"
                        android:text="@string/event_duration"
                        android:visibility="visible"/>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_ec_min_datetime"
                        android:layout_below="@+id/tv_ec_event_duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/dash_datetime"
                        android:layout_toStartOf="@+id/dash_datetime">

                        <EditText
                            android:id="@+id/input_ec_starttime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:enabled="false"
                            android:hint="@string/from"
                            android:inputType="textNoSuggestions"/>
                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:id="@+id/view_click_starttime"
                        android:layout_below="@id/tv_ec_event_duration"
                        android:layout_toLeftOf="@+id/dash_datetime"
                        android:layout_toStartOf="@+id/dash_datetime"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>

                    <TextView
                        android:id="@+id/dash_datetime"
                        android:layout_below="@+id/tv_ec_event_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="—"
                        android:textSize="18sp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="24dp"/>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_ec_max_datetime"
                        android:layout_below="@+id/tv_ec_event_duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/dash_datetime"
                        android:layout_toEndOf="@+id/dash_datetime">

                        <EditText
                            android:id="@+id/input_ec_endtime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:enabled="false"
                            android:hint="@string/up_to"
                            android:inputType="textNoSuggestions"/>
                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:id="@+id/view_click_endtime"
                        android:layout_below="@id/tv_ec_event_duration"
                        android:layout_toRightOf="@+id/dash_datetime"
                        android:layout_toEndOf="@+id/dash_datetime"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>

                    <RelativeLayout
                        android:id="@+id/rl_ec_continuing_event"
                        android:layout_below="@+id/dash_datetime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tv_ec_continuing_event"
                            android:layout_toLeftOf="@+id/switch_ec_continuing"
                            android:layout_toStartOf="@+id/switch_ec_continuing"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="@string/continuing_event" />

                        <TextView
                            android:layout_below="@+id/tv_ec_continuing_event"
                            android:layout_toLeftOf="@+id/switch_ec_continuing"
                            android:layout_toStartOf="@+id/switch_ec_continuing"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:text="@string/sub_text_continuing_event"/>

                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/switch_ec_continuing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"/>
                    </RelativeLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_ec_website"
                        android:layout_below="@+id/rl_ec_continuing_event"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <EditText
                            android:id="@+id/input_ec_website"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:hint="@string/event_website"
                            android:textSize="16sp"
                            android:inputType="textNoSuggestions"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_ec_tickets_link"
                        android:layout_below="@+id/input_layout_ec_website"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <EditText
                            android:id="@+id/input_ec_ticket_link"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:hint="@string/event_tickets_link"
                            android:textSize="16sp"
                            android:inputType="textNoSuggestions"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_ec_email"
                        android:layout_below="@+id/input_layout_ec_tickets_link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <EditText
                            android:id="@+id/input_ec_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:hint="@string/event_email"
                            android:textSize="16sp"
                            android:inputType="textNoSuggestions"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:gravity="end"
                            android:textColor="@color/colorAccent183"
                            android:paddingRight="4dp"
                            android:paddingEnd="4dp"
                            android:text="@string/warning_for_empty_box_email"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_ec_phone"
                        android:layout_below="@+id/input_layout_ec_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/input_ec_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:hint="@string/event_phone"
                            android:textSize="16sp"
                            android:inputType="textNoSuggestions"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:gravity="end"
                            android:textColor="@color/colorAccent183"
                            android:paddingRight="4dp"
                            android:paddingEnd="4dp"
                            android:text="@string/warning_for_empty_box_phone"/>
                    </android.support.design.widget.TextInputLayout>


                    <RelativeLayout
                        android:id="@+id/rl_ec_explicit_content_event"
                        android:layout_below="@+id/input_layout_ec_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/tv_ec_explicit_content_event"
                            android:layout_toLeftOf="@+id/switch_ec_explicit_content"
                            android:layout_toStartOf="@+id/switch_ec_explicit_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="@string/explicit_content" />

                        <TextView
                            android:layout_below="@+id/tv_ec_explicit_content_event"
                            android:layout_toLeftOf="@+id/switch_ec_explicit_content"
                            android:layout_toStartOf="@+id/switch_ec_explicit_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:text="@string/sub_text_explicit_content"/>

                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/switch_ec_explicit_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>

        <Button
            android:id="@+id/btn_editcreate_save"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            style="?attr/borderlessButtonStyle"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_light"
            android:text="@string/save"
            android:gravity="center"
            android:layout_gravity="bottom"/>

    </RelativeLayout>
</RelativeLayout>