<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.happ.fragments.InterestChildrenFragment"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/selected_row_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:id="@+id/selected_row"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/parents_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>



        <android.support.v7.widget.RecyclerView
            android:id="@+id/children_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/selected_row"
            android:layout_above="@+id/close_child_interests"
            >


        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/close_child_interests"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/close"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/colorAccent"
            android:layout_alignParentBottom="true"
            android:textSize="16sp"
            />

    </RelativeLayout>

</FrameLayout>
