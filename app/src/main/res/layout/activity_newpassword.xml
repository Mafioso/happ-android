<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.happ.LockableScrollView
        android:id="@+id/fake_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_recove_pw_bg_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/login_bg_5"/>

    </com.happ.LockableScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/drawer_top_padding">

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0px"
            android:layout_height="0px"/>

        <include layout="@layout/toolbar_transparent"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/form_layout2"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:layout_below="@+id/toolbar"
            android:layout_above="@+id/rl_footer"
            android:layout_centerVertical="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/happ_icon"
                android:transitionName="happ_logo"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tv_enter_newpw"
                android:layout_below="@+id/img_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/bg_light"
                android:text="@string/enter_new_password"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>


            <RelativeLayout
                android:id="@+id/rl_newpw_form"
                android:layout_below="@+id/tv_enter_newpw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_light_top"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <EditText
                    android:id="@+id/input_newpw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="textNoSuggestions"
                    android:fontFamily="Roboto"
                    android:background="#00000000"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:hint="@string/password"
                    android:theme="@style/DarkStyleEditText2" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_repeat_newpw_form"
                android:layout_below="@+id/rl_newpw_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_light_bottom"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginBottom="16dp">
                <EditText
                    android:id="@+id/input_repeat_newpw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:hint="@string/repeat_password"
                    android:fontFamily="Roboto"
                    android:background="#00000000"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:inputType="textPassword"
                    android:theme="@style/DarkStyleEditText2"/>

            </RelativeLayout>

            <Button
                android:id="@+id/btn_change_password"
                android:layout_below="@+id/rl_repeat_newpw_form"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                style="?attr/borderlessButtonStyle"
                android:textColor="@color/white70"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:paddingRight="24dp"
                android:paddingLeft="24dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_orange_event"
                android:text="@string/save_password"
                android:alpha="0.8"/>

            <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                android:id="@+id/circular_progress_newpw"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="32dp"
                android:indeterminate="true"
                android:layout_below="@+id/rl_repeat_newpw_form"
                style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
                android:visibility="invisible"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <include layout="@layout/copyright" />
    </RelativeLayout>
</RelativeLayout>