<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/root_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/event_edit_srollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="28dp"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    app:civ_border_color="@android:color/white"
                    app:civ_border_width="4dp"
                    android:id="@+id/avatar"/>

                <RelativeLayout
                    android:layout_toRightOf="@id/avatar"
                    android:layout_alignParentTop="true"
                    android:id="@+id/username_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/username_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_user"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="10dp"
                        android:alpha="0.57"/>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_user_fullname"
                        android:layout_toRightOf="@+id/username_icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp">

                        <EditText
                            android:id="@+id/input__user_fullname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:hint="@string/username"
                            android:inputType="textNoSuggestions"/>
                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/username_layout"
                    android:layout_toRightOf="@id/avatar"
                    android:id="@+id/email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/email_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_mail"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="10dp"
                        android:alpha="0.57"/>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input__user_layout_email"
                        android:layout_toRightOf="@+id/email_icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp">

                        <EditText
                            android:id="@+id/input_user_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:hint="@string/email"
                            android:inputType="textNoSuggestions|textEmailAddress"/>
                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/email_layout"
                    android:id="@+id/phone_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:id="@+id/phone_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_phone"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="10dp"
                        android:alpha="0.57"/>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input__user_layout_phonenumber"
                        android:layout_toRightOf="@+id/phone_icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp">

                        <EditText
                            android:id="@+id/input_user_phonenumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:hint="@string/phone_number"
                            android:inputType="textNoSuggestions|phone"/>
                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/phone_layout"
                    android:id="@+id/birth_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:id="@+id/calendar_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_event_black_24dp"
                            android:layout_alignParentBottom="true"
                            android:paddingBottom="10dp"
                            android:alpha="0.57"/>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_user_layout_birthday"
                            android:layout_toRightOf="@+id/calendar_icon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp">

                            <EditText
                                android:id="@+id/input_user_birthday"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:hint="@string/birthday"
                                android:enabled="false"
                                android:textColor="@android:color/primary_text_light_nodisable"/>
                        </android.support.design.widget.TextInputLayout>



                        <Button
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:id="@+id/btn_choice_birthday"
                            android:onClick="btn_click_birthday"
                            android:drawableTop="@drawable/ic_edit_compat"
                            android:layout_alignParentRight="true"
                            android:paddingTop="12dp"
                            android:layout_alignParentBottom="true"
                            style="?attr/borderlessButtonStyle">

                        </Button>
                    <!--android:drawablePadding="-15sp"-->

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_below="@+id/birth_layout"
                        android:id="@+id/gender_layout"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginRight="16dp"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Male"/>

                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/user_gender"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="56dp" />

                        <TextView
                            android:layout_marginLeft="16dp"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Female"/>

                    </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/gender_layout"
                android:background="@color/colorBlack8" />

            <Button
                android:id="@+id/btn_user_change_password"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/gender_layout"
                style="?attr/borderlessButtonStyle"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:text="@string/change_password"
                android:drawableLeft="@drawable/ic_password_compat"
                android:paddingLeft="16dp"
                android:drawablePadding="24dp"
                android:gravity="left|center"
                />


        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:id="@+id/useredit_fab"
        app:fabSize="normal"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/ic_done" />

</android.support.design.widget.CoordinatorLayout>