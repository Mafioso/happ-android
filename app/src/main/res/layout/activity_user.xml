<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar"/>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@android:color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Personal Information"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="1dp"
                    android:background="@color/dark12" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_user_firstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="5dp"
                        android:theme="@style/CreateScreenEditText">

                        <EditText
                            android:id="@+id/input__user_firstname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:hint="@string/first_name"
                            android:inputType="textNoSuggestions"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input__user_layout_lastname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:theme="@style/CreateScreenEditText">

                        <EditText
                            android:id="@+id/input_user_lastname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:hint="@string/last_name"
                            android:inputType="textNoSuggestions"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input__user_layout_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:theme="@style/CreateScreenEditText">

                        <EditText
                            android:id="@+id/input_user_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:hint="@string/email"
                            android:inputType="textNoSuggestions|textEmailAddress"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input__user_layout_phonenumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:theme="@style/CreateScreenEditText">

                        <EditText
                            android:id="@+id/input_user_phonenumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:hint="@string/phone_number"
                            android:inputType="textNoSuggestions|phone"/>
                    </android.support.design.widget.TextInputLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_user_layout_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/CreateScreenEditText">

                        <EditText
                            android:id="@+id/input_user_birthday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="56dp"
                            android:singleLine="true"
                            android:hint="@string/birthday"
                            android:inputType="textNoSuggestions"/>

                    </android.support.design.widget.TextInputLayout>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_choice_birthday"
                        android:onClick="btn_click_birthday"
                        android:background="@drawable/ic_edit_compat"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    />

                <View
                    android:layout_width="fill_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="1dp"
                    android:background="@color/dark12" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/user_rl_close_form_pw">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/password"
                        android:textColor="@color/dark80"
                        android:layout_marginRight="56dp"/>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_user_edit_pw"
                        android:onClick="btn_click_user_edit_pw"
                        android:background="@drawable/ic_edit_compat"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_user_close_form_pw"
                        android:onClick="btn_click_user_close_form_pw"
                        android:background="@drawable/ic_edit_compat"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark12"
                android:id="@+id/user_rl_edit_pw"
                android:translationZ="-1dp">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_user_layout_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/CreateScreenEditText"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="32dp">

                    <EditText
                        android:id="@+id/input_user_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="56dp"
                        android:singleLine="true"
                        android:hint="@string/password"
                        android:inputType="textNoSuggestions"/>

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_user_layout_rpw"
                    android:layout_below="@+id/input_user_layout_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/CreateScreenEditText"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="32dp">

                    <EditText
                        android:id="@+id/input_user_rpw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="56dp"
                        android:singleLine="true"
                        android:hint="@string/repeat_password"
                        android:inputType="textNoSuggestions"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_user_layout_newpw"
                    android:layout_below="@+id/input_user_layout_rpw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/CreateScreenEditText"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="32dp">

                    <EditText
                        android:id="@+id/input_user_newpw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="56dp"
                        android:singleLine="true"
                        android:hint="@string/new_password"
                        android:inputType="textNoSuggestions"/>

                </android.support.design.widget.TextInputLayout>



            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>