<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.NavigationView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_view_right_org"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:background="@color/bb_darkBackgroundColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingTop="@dimen/drawer_top_padding">

        <RelativeLayout
            android:id="@+id/rl_filter_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingLeft="16dp">
            <TextView
                android:id="@+id/customize_feed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="@string/customize_my_events"
                android:textColor="@color/white70"/>

            <ImageView
                android:id="@+id/close_right_org_navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_close_x"/>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/edit_input_layout_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/customize_feed"
                android:theme="@style/StyleForEditText"
                android:paddingTop="6dp"
                android:paddingLeft="16dp"
                android:paddingRight="8dp"
                android:paddingBottom="6dp">

                <EditText
                    android:id="@+id/filter_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search..."
                    android:drawableRight="@drawable/ic_search_compat"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/show_events_by_status"
                android:layout_below="@+id/edit_input_layout_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/show_events_by_status"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="24dp"/>

            <RelativeLayout
                android:id="@+id/filter_rl_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/show_events_by_status"
                android:layout_marginTop="16dp"
                android:paddingLeft="8dp">

                <ImageView
                    android:id="@+id/iv_filter_active"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_done"
                    android:alpha="0.6"
                    android:layout_marginRight="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_active"
                    android:textSize="16sp"
                    android:textColor="@color/white70"
                    android:layout_toRightOf="@+id/iv_filter_active"
                    android:layout_centerVertical="true"/>

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/filter_activ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/filter_rl_inactive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/filter_rl_active"
                android:layout_marginTop="24dp"
                android:paddingLeft="8dp">

                <ImageView
                    android:id="@+id/iv_filter_inactive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_inactive"
                    android:layout_marginRight="16dp"
                    android:alpha="0.6"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_inactive"
                    android:textColor="@color/white70"
                    android:textSize="16dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_filter_inactive"/>

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/filter_inactive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/filter_rl_onreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/filter_rl_inactive"
                android:layout_marginTop="24dp"
                android:paddingLeft="8dp">

                <ImageView
                    android:id="@+id/iv_filter_onreview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_onreview"
                    android:layout_marginRight="16dp"
                    android:alpha="0.6"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_on_review"
                    android:textColor="@color/white70"
                    android:textSize="16dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_filter_onreview"/>

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/filter_onreview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/filter_rl_finished"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/filter_rl_onreview"
                android:layout_marginTop="24dp"
                android:paddingLeft="48dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_finished"
                    android:textColor="@color/white70"
                    android:textSize="16dp"
                    android:layout_centerVertical="true"/>

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/filter_finished"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_below="@+id/rl_filter_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@color/md_divider_white">

            <TextView
                android:id="@+id/show_only_events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_only_events"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/click_to_edit_range"
                android:textColor="@color/white57"
                android:textSize="16sp"/>

            <LinearLayout
                android:id="@+id/filter_rl_start_date"
                android:layout_below="@+id/show_only_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white70"
                    android:text="@string/from"
                    android:layout_marginRight="16dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:text="@string/today"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/filter_rl_end_date"
                android:layout_below="@+id/filter_rl_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white70"
                    android:text="@string/up_to"
                    android:layout_marginRight="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="OCTOBER 24, 2016"/>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.design.widget.NavigationView>